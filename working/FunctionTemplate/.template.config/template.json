{
    "$schema": "http://json.schemastore.org/template",
    "identity": "loanDepot.PowerShell.Function",
    "name": "PowerShell Function Template",
    "shortName": "PSFunction",
    "author": "Joel Bennett",
    "classifications": [
        "Common", "Function"
    ],
    "tags": {
      "language": "PowerShell",
      "type": "item"
    },
    "sources": [
        {
            "source": "../../",
            "target": "./",
            "include": [
                "**/New-Function.*"
            ]
        }
    ],
    "sourceName": "New-Function",
    "symbols": {
        "synopsis": {
            "type": "parameter",
            "description": "A brief description of the function",
            "isRequired": true,
            "replaces": "Serves as a placeholder"
        },
        "description": {
            "type": "parameter",
            "description": "A longer description of the function",
            "isRequired": true,
            "replaces": "Explains the placeholder"
        },
        "exampleUsage": {
            "type": "parameter",
            "description": "An example of how to use the function",
            "isRequired": true,
            "replaces": "Invoke-Thing -Parameter 'Value'"
        }
    }
}
